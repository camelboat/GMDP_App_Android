                #     font_size: '100pt'
                #     on_release: app.decrease_temperature()
            Screen:
                name: 'room_occupation'
                MDCard:
                    size_hint: 0.95, 0.3
                    #size: dp(360), dp(100)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    BoxLayout:
                        orientation:'vertical'
                        padding: dp(8)
                        MDLabel:
                            text: 'People Number Condition'
                            theme_text_color: 'Secondary'
